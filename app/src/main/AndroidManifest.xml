<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fahim.shakenchange" >

    <uses-permission android:name="android.permission.SET_WALLPAPER" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LauncherActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="Shake &apos;n Change"
            android:theme="@style/FahimTheme" >
        </activity>
        <activity
            android:name=".CreditActivity"
            android:label="Credits"
            android:theme="@style/FahimTheme" >
        </activity>
        <activity
            android:name=".SelectActivity"
            android:label="Select Wallpaper"
            android:theme="@style/FahimTheme" >
        </activity>
        <activity
            android:name=".PreviewActivity"
            android:label="@string/title_activity_preview" >
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="Settings"
            android:theme="@style/FahimTheme" >
        </activity>

        <service
            android:name=".FahimWallpaperService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".LolActivity"
            android:label="@string/title_activity_lol" >
        </activity>
        <activity
            android:name=".HowToActivity"
            android:label="How to?"
            android:theme="@style/FahimTheme" >
        </activity>
    </application>

</manifest>
